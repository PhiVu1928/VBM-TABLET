<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="VBM._pages._menuinfo.outline_page"
            xmlns:pages="clr-namespace:VBM._pages._menuinfo"
            x:Name="flypage"
            NavigationPage.HasNavigationBar="False"
            FlyoutLayoutBehavior="Popover"
            BackgroundColor="{StaticResource vbmwhite}">
      <FlyoutPage.Flyout>
            <ContentPage Title="vbm" BackgroundColor="WhiteSmoke">
                <Grid/>
            </ContentPage>
      </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="vbm" BackgroundColor="{StaticResource vbmgreen}">
            <Grid/>
        </ContentPage>
    </FlyoutPage.Detail>    
</FlyoutPage>